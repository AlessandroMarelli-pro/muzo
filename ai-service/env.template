# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=4000
FLASK_DEBUG=False
SECRET_KEY=dev-secret-key-change-in-production
LOG_LEVEL=INFO
LOG_FILE=
CORS_ORIGINS=*

# Metadata Provider Configuration
# Options: GEMINI, OPENAI
METADATA_PROVIDER=GEMINI

# Metadata Extraction Mode
# Options: fast (minimal LLM), balanced (default), accurate (maximum LLM)
METADATA_MODE=balanced

# Feature Flags
# Enable/disable Discogs enrichment
METADATA_USE_DISCOGS=true
# Enable/disable LLM fallback when Discogs fails
METADATA_USE_LLM_FALLBACK=true

# Discogs API Configuration
# Get your token from https://www.discogs.com/settings/developers
DISCOGS_USER_TOKEN=
# Use LLM for result selection (disabled automatically in fast mode)
DISCOGS_USE_LLM_SELECTION=true
# Maximum number of Discogs results to fetch
DISCOGS_MAX_RESULTS=10
# Minimum confidence threshold for Discogs matches (0.0-1.0)
DISCOGS_MIN_CONFIDENCE=0.7

# Redis Cache Configuration
# Redis host for metadata caching
REDIS_HOST=localhost
# Redis port
REDIS_PORT=6379
# Redis password (if required)
REDIS_PASSWORD=
# Redis database number
REDIS_DB=0
# Cache TTL in hours for metadata results
REDIS_CACHE_TTL_HOURS=24

# LLM API Keys
# Google Gemini API key (required if METADATA_PROVIDER=GEMINI)
GEMINI_API_KEY=
# OpenAI API key (required if METADATA_PROVIDER=OPENAI)
OPENAI_API_KEY=

# Service Toggles
ENABLE_SIMPLE_ANALYSIS=true
ENABLE_HIERARCHICAL_CLASSIFICATION=true
PERFORMANCE_MONITORING=true
SLOW_OPERATION_THRESHOLD=1.0

# Audio Processing
AUDIO_SAMPLE_RATE=22050
AUDIO_CHUNK_DURATION=30

# Gradual Rollout Configuration
# Percentage of requests to use Discogs enrichment (0-100)
# Useful for gradual rollout and A/B testing
METADATA_DISCOGS_ROLLOUT_PERCENTAGE=100
